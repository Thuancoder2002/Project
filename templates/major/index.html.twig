{% extends "base.html.twig" %}

{% block body %} 
<div class="container col-md-10 text-center mt-3">
<tr>
        <th colspan="3" ><li><a class="text text-primary"><h2>List of Major<h2></a></li></th>
          {% if is_granted ('ROLE_ADMIN') %}
        <th> <a class="btn btn-info text-center" href="{{ path('major_add')}}">Add new Major</a>
        </th>
        {% endif %}
 </tr>

 
<table class="table table-info">

    <thead>
        <tr>
            <th>No</th>
            <th>Name Major</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
 
    {% set i = 1 %}
    {% for major in major %}
        <tr>
            <td>{{ i }}</td>
            <td>{{ major.name }}</td>
           
            <td>
          
             <a href="{{path('major_detail',{'id': major.id})}}">
                <img src="{{ asset('images/file.png')}}" width="30" height="30">
                </a>
                  {% if is_granted ('ROLE_ADMIN') %}
                <a href="{{path('major_edit',{'id': major.id})}}">
                    <img src="{{ asset('images/edit.png')}}" width="30" height="30">
                </a>
                <a  href="{{path('major_delete',{'id': major.id})}}"
                onclick="return confirm('Are you sure to delete this Major ?')";
                >
                    <img src="{{ asset('images/delete.png')}}" width="30" height="30">
                </a>
                  {% endif %}
            </td>

                 
           
        </tr>
        {% set i = i + 1 %}
    {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}