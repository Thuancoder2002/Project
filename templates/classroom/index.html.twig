{% extends "base.html.twig" %}

{% block body %} 
<div class="container col-md-10 text-center mt-3">
<tr>
        <th colspan="3" ><li><a class="text text-primary"><h2>List Class<h2></a></li></th>
        {% if is_granted ('ROLE_ADMIN') %}
        <th> <a class="btn btn-info text-center" href="{{ path('classroom_add')}}">Add new class</a>
        </th>
        {% endif %}
        <div class="row mt-3">
						
						<div class="col">
						<div class="row">
						<div class="col-5">
							<h6 class="text text-success">Search Student</h6>
						</div>
						<div class="col-7">
							<div class="form-group">
								<form action="{{ path('classroom_search')}}" method="post">
									<input class="form-control" type="search" name="name" placeholder="Enter Name Class">
								</form>
							</div>
						</div>
						</div>
         
        			 </div>
			</div>
      
 </tr>

 
<table class="table table-info">

    <thead>
        <tr>
            <th>No</th>
            <th>Name Class</th>
     
            <th>Actions</th>
            
        </tr>
    </thead>
    <tbody>
 
    {% set i = 1 %}
    {% for classroom in classroom %}
        <tr>
            <td>{{ i }}</td>
            <td>{{ classroom.name }}</td>
            <td>

          
                <a href="{{path('classroom_detail',{'id': classroom.id})}}">
                <img src="{{ asset('images/file.png')}}" width="30" height="30">
                </a>      
                 {% if is_granted ('ROLE_ADMIN') %}
  
                <a href="{{path('classroom_edit',{'id': classroom.id})}}">
                    <img src="{{ asset('images/edit.png')}}" width="30" height="30">
                </a>
                <a  href="{{path('classroom_delete',{'id': classroom.id})}}"
                onclick="return confirm('Are you sure to delete this Class ?')";
                >
                    <img src="{{ asset('images/delete.png')}}" width="30" height="30">
                </a>
                {% endif %} 
            </td>
             
                 
           
        </tr>
        {% set i = i + 1 %}
    {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
