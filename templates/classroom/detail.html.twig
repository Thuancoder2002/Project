{% extends "base.html.twig" %}

{% block body %}
<div class="container text-center mt-3">
   <div class="row">
      <div class="col-md-12 text-center mt-3">
         <div class="card">
            <div class="card-header">
               <h1 class="text text-primary">List student of Class</h1>
            </div>
               <div class="card-body">
                  <table class="table table-bordered">
                     <tr>
                        <th>{{classroom.name}}</th>
                     
                       
                     </tr>
                     <tr>
                        <td>  {% if classroom.students != null %}
                       <ul>
                        {% for student in classroom.students %}
                           <a>
                                 {{ student.name }}
                              </a>
                         {% else %}
                        N/A
                           
                        {% endfor %}
                        
                     </ul>
                     
                {% endif %} </td>
                     
                        
                     </tr>
                  </table>
               </div>  
             
         </div>
      </div>
   </div>
</div>
{% endblock %}